// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Character {
  id        String   @id @default(cuid())
  name      String
  subtitle  String?
  hp        String?
  ac        Int?
  speed     String?
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Campaign {
  id         String   @id @default(cuid())
  name       String
  gmName     String?
  ownerEmail String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
